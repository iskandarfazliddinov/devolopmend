<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#D5000000">

    <LinearLayout
        android:id="@+id/layout_stive_jobs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:foreground="?selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/bg_layout"
        android:layout_marginBottom="8dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/image_stive_jobs"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="24sp"
            android:text="Stive Jobs"
            android:textColor="@color/white"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_pavel_durov"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:foreground="?selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_layout">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/image_pavel_durov"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="24sp"
            android:text="Pavel Durov"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_bill_gates"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:foreground="?selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_layout">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/image_bill_gates"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="24sp"
            android:text="Bill Gatese"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_mark_zuckerberg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:foreground="?selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:orientation="horizontal"
        android:background="@drawable/bg_layout">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/mark_zuckerberg"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="24sp"
            android:text="Mark Zuckerberg"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>